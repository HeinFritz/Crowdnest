<%= form_with model: @project, url: step3_project_steps_path, method: :post, local: true, html: { multipart: true } do |form| %>
  <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Upload Your Project Image</h2>

    <div class="mb-6">
      <%= form.label :image, "Project Image", class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :image, class: "mt-2 block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Next: Continue", class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>

