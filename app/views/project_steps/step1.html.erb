<%= form_with model: @project, url: step1_project_steps_path, method: :post, local: true do |form| %>
  <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Create Your Project</h2>

    <!-- Project Name -->
    <div class="mb-6">
      <%= form.label :title, "Project Name", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-2 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Enter a catchy project name" %>
    </div>

     <!-- Subtitle -->
    <div class="mb-6">
      <%= form.label :subtitle, "Subtitle", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :subtitle, class: "mt-2 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Enter a catchy project name" %>
    </div>

    <!-- Category Selection -->
    <div class="mb-6">
      <%= form.label :category, "Category", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :category, ["Art", "Tech", "Music", "Book", "Food", "Journalism", "Handmade", "Game", "Film", "Publishing"], { prompt: "Select a Category" }, class: "mt-2 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <!-- Project Description -->
    <div class="mb-6">
      <%= form.label :description, "Project Description", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, class: "mt-2 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Describe your project..." %>
    </div>

    <!-- Location -->
    <div class="mb-6">
      <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :location, class: "mt-2 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Describe your project..." %>
    </div>

    <div class="flex justify-between">
      <!-- Back Button -->
      <%= link_to "Back", root_path, class: "bg-gray-300 text-gray-800 px-10 py-3 rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500" %>

      <!-- Next Step Button -->
      <%= form.submit "Next Step", class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>
