<div id="<%= dom_id project %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= project.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Subtitle:</strong>
    <%= project.subtitle %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= project.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Goal:</strong>
    <%= project.goal %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Deadline:</strong>
    <%= project.deadline %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= project.category %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Location:</strong>
    <%= project.location %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Creator:</strong>
    <%= project.creator_id %>
  </div>

  <% if project.image.attached? %>
  <p><strong>Image:</strong></p>
    <%= image_tag url_for(project.image), class: "rounded-md w-64 h-auto mt-2" %>
  <% else %>
    <p>No image uploaded</p>
  <% end %>
</div>
