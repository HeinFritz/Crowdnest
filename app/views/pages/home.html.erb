<!-- app/views/pages/home.html.erb -->
<div class="w-full min-h-screen bg-gradient-to-br from-green-400 to-green-200">
  <!-- Top nav with search, login, signup -->
  <div class="flex items-center justify-between px-8 py-4 bg-white shadow-md">
    <!-- Logo -->
    <div class="text-2xl font-bold text-green-600">CrowdNest</div>

    <!-- Search bar -->
    <div class="flex flex-1 mx-8">
      <input 
        type="text" 
        placeholder="Search projects..."
        class="w-full px-4 py-2 border border-gray-300 rounded-l-full focus:outline-none focus:ring-2 focus:ring-green-500"
      />
      <button class="px-4 py-2 bg-green-500 text-white rounded-r-full hover:bg-green-600">Search</button>
    </div>

    <!-- Auth buttons -->
    <div class="flex space-x-4">
      <%= link_to "Log In", new_creator_session_path, class:"text-green-600 font-semibold hover:scale-105" %>
      <%= link_to "Sign Up as Creator", new_creator_registration_path ,class:"px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700" %>
    </div>
  </div>

  <!-- Category navbar -->
  <div class="flex justify-center bg-green-100 py-3 shadow-sm space-x-6 text-green-800 font-medium text-sm">
    <a href="#" class="hover:underline">Art</a>
    <a href="#" class="hover:underline">Tech</a>
    <a href="#" class="hover:underline">Music</a>
    <a href="#" class="hover:underline">Gaming</a>
    <a href="#" class="hover:underline">Film</a>
    <a href="#" class="hover:underline">Publishing</a>
  </div>

  <!-- Projects Grid -->
  <div class="px-10 py-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @projects.each do |project| %>
  <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow">
    <% if project.image.attached? %>
      <%= image_tag project.image, class: "w-full h-48 object-cover" %>
    <% else %>
      <img src="https://via.placeholder.com/400x200" class="w-full h-48 object-cover" />
    <% end %>

    <div class="p-4">
      <h3 class="text-lg font-semibold text-gray-800"><%= project.title %></h3>
      <p class="text-sm text-gray-600 mt-1"><%= truncate(project.description, length: 100) %></p>

      <div class="mt-4">
        <div class="w-full bg-gray-200 rounded-full h-2.5">
          <div class="bg-green-500 h-2.5 rounded-full" style="width: 50%"></div> <!-- placeholder % -->
        </div>
        <p class="text-xs text-gray-500 mt-1">$0 raised of $<%= project.goal %></p>
      </div>

      <%= link_to "View Project", project_path(project), class: "mt-4 inline-block text-green-600 font-medium hover:underline" %>
    </div>
  </div>
<% end %>

  </div>
</div>
