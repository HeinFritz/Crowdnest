<!-- app/views/home/index.html.erb -->
<div class="bg-white">
  <!-- Hero Section -->
  <div class="relative bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Bring your creative projects to life</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Fund innovative projects, support creative minds, and be part of something amazing.
        </p>
        <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
          <div class="rounded-md shadow">
            <%= link_to "Start a project", new_user_registration_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10" %>
          </div>
          <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
            <%= link_to "Explore projects", "#", class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Projects Section (placeholder for now) -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h2 class="text-3xl font-extrabold tracking-tight text-gray-900">
      Featured Projects
    </h2>
    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- We'll populate this with actual projects later -->
      <div class="border rounded-lg overflow-hidden shadow-sm">
        <div class="h-48 bg-gray-200"></div>
        <div class="p-6">
          <h3 class="text-lg font-medium text-gray-900">Example Project</h3>
          <p class="mt-2 text-sm text-gray-500">This is a placeholder for a real project that will appear here once creators start listing their ideas.</p>
          <div class="mt-4">
            <div class="relative pt-1">
              <div class="overflow-hidden h-2 text-xs flex rounded bg-gray-200">
                <div style="width: 70%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-indigo-500"></div>
              </div>
            </div>
            <div class="flex justify-between text-sm mt-1">
              <span class="font-medium">$14,000</span>
              <span class="text-gray-500">70% funded</span>
            </div>
          </div>
        </div>
      </div>
      <!-- Additional placeholder projects -->
      <div class="border rounded-lg overflow-hidden shadow-sm">
        <div class="h-48 bg-gray-200"></div>
        <div class="p-6">
          <h3 class="text-lg font-medium text-gray-900">Another Project</h3>
          <p class="mt-2 text-sm text-gray-500">Another example of what projects will look like on your platform.</p>
          <div class="mt-4">
            <div class="relative pt-1">
              <div class="overflow-hidden h-2 text-xs flex rounded bg-gray-200">
                <div style="width: 40%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-indigo-500"></div>
              </div>
            </div>
            <div class="flex justify-between text-sm mt-1">
              <span class="font-medium">$8,000</span>
              <span class="text-gray-500">40% funded</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- How It Works Section -->
  <div class="bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 text-center">
        How It Works
      </h2>
      <div class="mt-12 grid gap-8 md:grid-cols-3">
        <div class="text-center">
          <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
          </div>
          <h3 class="mt-3 text-lg font-medium text-gray-900">Create a Project</h3>
          <p class="mt-2 text-sm text-gray-500">Share your creative idea with our community and set a funding goal.</p>
        </div>
        <div class="text-center">
          <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="mt-3 text-lg font-medium text-gray-900">Get Funded</h3>
          <p class="mt-2 text-sm text-gray-500">Backers support your project and receive rewards in return.</p>
        </div>
        <div class="text-center">
          <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-md bg-indigo-500 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <h3 class="mt-3 text-lg font-medium text-gray-900">Bring It to Life</h3>
          <p class="mt-2 text-sm text-gray-500">Use the funds to make your project a reality and keep backers updated.</p>
        </div>
      </div>
    </div>
  </div>
</div>